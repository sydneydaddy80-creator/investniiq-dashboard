<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Dashboard</title>
  <%- include('_style') %>
</head>
<body>
<header>
  <div style="font-weight:800">Investniiq Dashboard</div>
  <div class="top-actions">
    <a class="btn secondary" href="/projects">Projects</a>
    <a class="btn secondary" href="/clients">Clients</a>
    <a class="btn secondary" href="/users">Users</a>
    <form method="post" action="/logout" style="margin:0">
      <button class="btn secondary" type="submit">Logout</button>
    </form>
  </div>
</header>

<div class="container">
  <div class="grid">
    <div class="card" style="grid-column: span 6;">
      <h3 style="margin:0 0 8px 0;">Column 1: Project List</h3>
      <div class="muted" style="margin-bottom:10px;">Click the Project Number to open project sections.</div>
      <table>
        <thead>
          <tr>
            <th>Number</th><th>Name</th><th>Status</th><th>Client</th><th>Manager</th><th>Completes</th><th>Clicks</th>
          </tr>
        </thead>
        <tbody>
          <% projects.forEach(p => { %>
            <tr>
              <td><a href="/projects/<%= p.id %>"><%= p.project_number %></a></td>
              <td><%= p.project_name %></td>
              <td><span class="pill <%= p.status %>"><%= p.status %></span></td>
              <td><%= p.client_name || '-' %></td>
              <td><%= p.manager_name || '-' %></td>
              <td><%= p.completes || 0 %></td>
              <td><%= p.total_clicks || 0 %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>

    <div class="card" style="grid-column: span 6;">
      <h3 style="margin:0 0 8px 0;">Column 2: Client List</h3>
      <table>
        <thead><tr><th>Name</th><th>Currency</th><th>Created</th></tr></thead>
        <tbody>
          <% clients.forEach(c => { %>
            <tr>
              <td><%= c.name %></td>
              <td><%= c.currency %></td>
              <td><%= (c.created_at || '').slice(0,19).replace('T',' ') %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>

    <div class="card" style="grid-column: span 6;">
      <h3 style="margin:0 0 8px 0;">Column 3: Manager / User List</h3>
      <table>
        <thead><tr><th>Name</th><th>Email</th><th>Role</th><th>Status</th></tr></thead>
        <tbody>
          <% users.forEach(u => { %>
            <tr>
              <td><%= u.name %></td>
              <td><%= u.email %></td>
              <td><%= u.role %></td>
              <td><%= u.status %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>

    <div class="card" style="grid-column: span 6;">
      <h3 style="margin:0 0 8px 0;">Column 4: Billing Totals</h3>
      <% if (user.role === 'admin') { %>
        <div class="row">
          <div class="card" style="flex:1">
            <div class="muted">Hold Projects</div>
            <div style="font-size:20px;font-weight:800"><%= totals.hold_count || 0 %></div>
            <div class="muted">Hold Amount: $<%= Number(totals.hold_amount || 0).toFixed(2) %></div>
          </div>
          <div class="card" style="flex:1">
            <div class="muted">Received Projects</div>
            <div style="font-size:20px;font-weight:800"><%= totals.received_count || 0 %></div>
            <div class="muted">Received Amount: $<%= Number(totals.received_amount || 0).toFixed(2) %></div>
          </div>
        </div>
      <% } else if (user.role === 'manager') { %>
        <div class="card">
          <div class="muted">Hold Projects</div>
          <div style="font-size:20px;font-weight:800"><%= totals.hold_count || 0 %></div>
          <div class="muted">Hold Amount: $<%= Number(totals.hold_amount || 0).toFixed(2) %></div>
          <div class="muted" style="margin-top:8px;">(Managers cannot see received totals)</div>
        </div>
      <% } else { %>
        <div class="muted">Billing totals are hidden for User role.</div>
      <% } %>
    </div>
  </div>
</div>
</body>
</html>
