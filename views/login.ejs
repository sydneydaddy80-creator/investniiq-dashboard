<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Login</title>
  <%- include('_style') %>
</head>
<body>
<header>
  <div style="font-weight:800">Investniiq Dashboard</div>
</header>
<div class="container" style="max-width:520px;margin:30px auto;">
  <div class="card">
    <h2 style="margin-top:0">Login</h2>
    <% if (error) { %>
      <div style="background:#ffecec;border:1px solid #ffc9c9;padding:10px;border-radius:8px;color:#8a1f1f;margin-bottom:10px;"><%= error %></div>
    <% } %>
    <form method="post" action="/login">
      <div class="field">
        <label>Email</label>
        <input name="email" type="email" required />
      </div>
      <div class="field">
        <label>Password</label>
        <input name="password" type="password" required />
      </div>
      <button class="btn" type="submit">Login</button>
    </form>
    <p class="muted">Default admin: admin@investniiq.local / Admin@123</p>
  </div>
</div>
</body>
</html>
