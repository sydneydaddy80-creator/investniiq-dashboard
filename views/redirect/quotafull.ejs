<% const title = "Thank You"; const heading = "Quota Full"; const message = "Thank you! The quota for this survey has already been filled."; %>
<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title><%= title %> | Investniiq</title>
  <%- include('../_style') %>
  <style>
    .center-wrap{min-height:100vh;display:flex;align-items:center;justify-content:center;padding:24px;background:#f6f7fb;}
    .cardx{max-width:520px;width:100%;background:#fff;border:1px solid #e6e8ef;border-radius:16px;box-shadow:0 8px 24px rgba(0,0,0,.06);padding:26px;}
    .brand{display:flex;align-items:center;justify-content:center;gap:10px;margin-bottom:14px;}
    .logo{width:46px;height:46px;border-radius:12px;background:#111827;color:#fff;display:flex;align-items:center;justify-content:center;font-weight:800;}
    .brand-name{font-size:18px;font-weight:800;letter-spacing:.2px}
    h2{margin:6px 0 8px 0}
    .muted2{color:#6b7280}
    .pill{display:inline-block;margin-top:14px;padding:6px 10px;border-radius:999px;background:#f3f4f6;color:#111827;font-size:12px}
    a.btn{display:inline-block;margin-top:18px;text-decoration:none}
  </style>
</head>
<body>
  <div class="center-wrap">
    <div class="cardx">
      <div class="brand">
        <div class="logo">IQ</div>
        <div class="brand-name">Investniiq</div>
      </div>
      <h2><%= heading %></h2>
      <p class="muted2"><%= message %></p>
      <% if (uid) { %>
        <div class="pill">Reference ID: <%= uid %></div>
      <% } %>
      <div style="margin-top:14px" class="muted2">You may now close this page.</div>
    </div>
  </div>
</body>
</html>
